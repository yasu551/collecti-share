.row.justify-content-center.align-items-center
  .col-md-8.col-11
    %h1.fs-2.text-center.my-4 マイアイテム作成
    .mb-2
      = simple_form_for @item, url: user_items_path do |f|
        = f.simple_fields_for :item_versions do |ff|
          = ff.input :name
          = ff.input :description
          = ff.input :condition
          = ff.input :daily_price
          = ff.input :availability_status
        = f.input :item_tag_ids, as: :select, collection: ItemTag.latest, input_html: { multiple: true }, label_method: :name, value_method: :id
        = f.submit class: 'btn btn-primary'
    = link_to '戻る', user_items_path, class: 'btn btn-secondary'

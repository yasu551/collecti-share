.row.justify-content-center.align-items-center
  .col-md-8.col-11
    %h1.fs-2.text-center.my-4 マイアイテム編集
    .mb-2
      = simple_form_for @item_version, url: user_item_path, method: :put do |f|
        = f.input :item_id, as: :hidden
        = f.input :name
        = f.input :description
        = f.input :condition
        = f.input :daily_price
        = f.input :availability_status
        = f.submit class: 'btn btn-primary'
    = link_to '戻る', user_item_path(@item), class: 'btn btn-secondary'

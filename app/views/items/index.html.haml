.row.justify-content-center.align-items-center
  .col-md-8.col-11
    %h1.fs-2.text-center.my-4 アイテム一覧
    .mb-3
      = form_with url: items_path, method: :get, class: "hstack gap-4 align-items-center" do |f|
        = f.search_field :keyword, placeholder: "キーワードで検索", class: "form-control", value: params[:keyword]
        = f.submit "検索", class: "btn btn-primary"
    %ul.list-group
      - @items.each do |item|
        %li.list-group-item
          = link_to item.name, item_path(item)
    .mt-2
      = paginate @items

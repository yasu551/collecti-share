.row.justify-content-center.align-items-center
  .col-md-8.col-11
    %h1.fs-2.text-center.my-4= @item.name
    .hstack.gap-2
      = link_to "レンタルする", new_item_rental_transaction_url(@item), class: 'btn btn-primary'
      = link_to "会話する", item_conversation_path(@item), class: 'btn btn-secondary'
    .vstack.gap-3
      - %i[description condition daily_price availability_status user_name].each do |attribute|
        %hr
        .row
          .col-3
            %h6.mb-0= Item.human_attribute_name(attribute)
          .col-9
            = @item.public_send(attribute)
      %hr
